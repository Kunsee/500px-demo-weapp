.container {
  align-items:flex-start;
}

.search-bar{
    width:100%;
    /*position: fixed;*/
    /* margin: 20rpx; */
    height:100rpx;
    top:0;
    background: #ffffff;
    align-items: center;
    justify-content: center;
    display: flex;
}

.search-bar-warper{
    background:#eeeeee;
    height:60rpx;
    margin:0 20rpx;
    border-radius: 10rpx;
    padding: 0 20rpx;
    align-items: center;
    display: flex;
    width:90%;
}
.search-bar-warper input{
    width:90%;
}

.topic-owner {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
}

.owner-avatar {
  width: 80rpx;
  height: 80rpx;
  left: 10rpx;
  margin-right: 20rpx;
  border-radius: 100%;
}

.topic-created {
  margin-left: 30rpx;
  font-size:14px;
  color:#999;
}

.topic-tit {
  flex:1;
  box-sizing:border-box;
  padding-right:10rpx;
  line-height: 1.4;
  font-size:14px;
  color:#333;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.topic-info {
  margin-bottom: 40rpx;
  color:#777;
}

.topic-desc {
  width: 700rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  line-height: 1.4;
  word-wrap: break-word;
  word-break: normal;
  font-size:14px;
  color:#333;
  /*border-top:1px solid #ddd;*/
}

.topic-tags {
  width: 700rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-bottom: 20rpx;
  line-height: 1.4;
  word-wrap: break-word;
  word-break: normal;
  font-size:14px;
  color:#999;
}
